<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/debit_credit_status_row_padding_top"
    android:paddingBottom="@dimen/debit_credit_status_row_padding_bottom"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/list_header_left_padding"
    android:background="@color/list_row_background_color">

    <TextView
        style="@style/list_view_row_text_style"
        android:id="@+id/creditor_employee_name"
        android:layout_weight="5"
        android:text="Shafiul Kabir"/>

    <TextView
        style="@style/list_view_row_text_style"
        android:id="@+id/debitor_employee_name"
        android:layout_weight="5"
        android:gravity="center"
        android:text="Nazakat Ali" />

    <TextView
        style="@style/list_view_row_text_style"
        android:id="@+id/amount"
        android:gravity="center"
        android:layout_weight="3"
        android:text="3452.55" />

</LinearLayout>